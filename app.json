{
  "expo": {
    "name": "icr-payments",
    "slug": "icr-payments",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "icr-payments",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.icalre.icrpayments"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.icalre.icrpayments"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "./plugins/with-notification-listener",
        {
          "serviceLabel": "ICR Payments"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 33
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
